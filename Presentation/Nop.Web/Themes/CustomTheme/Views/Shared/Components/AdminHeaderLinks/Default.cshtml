@model AdminHeaderLinksModel
@if (Model.IsCustomerImpersonated || Model.DisplayAdminLink)
{
        @if (Model.IsCustomerImpersonated)
        {
            <div class="impersonate dropdown-item d-inline-flex align-items-center">
                <span>@string.Format(T("Account.ImpersonatedAs").Text, Model.ImpersonatedCustomerName)</span>
                <a href="@Url.RouteUrl("Logout")" class="finish-impersonation d-flex align-items-center" title="@T("Account.ImpersonatedAs.Finish.Hint")"><span class="lnr linearicons-cross ml-2"></span></a>
            </div>
        }
        @if (Model.DisplayAdminLink)
        {
            <a href="@Url.Content("~/Admin")" class="administration dropdown-item">@T("Account.Administration")</a>
        }
        @if (!string.IsNullOrEmpty(Model.EditPageUrl))
        {
            <a href="@Model.EditPageUrl" class="manage-page dropdown-item">@T("Common.ManagePage")</a>
        }
}