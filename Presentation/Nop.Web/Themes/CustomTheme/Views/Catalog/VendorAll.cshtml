@model IList<VendorModel>
@{
    Layout = "_ColumnsTwo";

    //title
    Html.AddTitleParts(T("PageTitle.Vendors").Text);
    //page class
    Html.AppendPageCssClassParts("html-vendor-list-page");
}
<div class="page vendor-list-page">
    <div class="page-title">
        <h2><strong>@T("Vendors.List")</strong></h2>
    </div>
    <div class="page-body">
        <div class="vendor-grid">
            <div class="item-grid row-sm">
                @foreach (var item in Model)
                {
                    <div class="item-box col-xl-3 col-lg-4 col-md-4 col-6">
                        <div class="vendor-item mb-3">
                            <div class="picture">
                                <a href="@Url.RouteUrl("Vendor", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    <img class="img-fluid" alt="@item.PictureModel.AlternateText" src="@item.PictureModel.ImageUrl" title="@item.PictureModel.Title" />
                                </a>
                            </div>
                            <h5 class="title m-0">
                                <a href="@Url.RouteUrl("Vendor", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                                    @item.Name
                                </a>
                            </h5>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>