@model RegisterResultModel
@{
    Layout = "_ColumnsOne";

    //title
    Html.AddTitleParts(T("PageTitle.Register").Text);
    //page class
    Html.AppendPageCssClassParts("html-registration-result-page");
}
<form asp-route="RegisterResult" asp-route-returnurl="@Context.Request.Query["ReturnUrl"]" method="post">
    <div asp-validation-summary="ModelOnly" class="message-error"></div>
    <div class="page inner-page registration-result-page">
        <div class="page-title text-center">
            <h2>@T("Account.Register")</h2>
        </div>
        <div class="page-body">
            <div class="result alert alert-success">
                @Model.Result
            </div>
            <div class="buttons text-center">
                <button type="submit" name="register-continue" class="btn btn-orange register-continue-button">
                    @T("Account.Register.Result.Continue")
                </button>
            </div>
        </div>
    </div>
</form>