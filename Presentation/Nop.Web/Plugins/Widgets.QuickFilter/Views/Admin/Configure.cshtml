@{
    Layout = "~/Plugins/Widgets.QuickFilter/Views/_ConfigurePluginNop4you.cshtml";
    Html.SetActiveMenuItemSystemName("WidgetsQuickFilter");
}
@model Nop.Plugin.Widgets.QuickFilter.Models.ConfigurationModel
@using Nop.Plugin.Widgets.QuickFilter
@using Nop.Web.Framework;
@using Nop.Services;

<script type="text/javascript">
        $(document).ready(function () {
            $("#@Html.IdFor(model => model.FilterEnableManufacturers)").click(filterEnableManufacturers);
            filterEnableManufacturers();

            $("#@Html.IdFor(model => model.FilterEnableVendors)").click(filterEnableVendors);
            filterEnableVendors();

            $("#@Html.IdFor(model => model.FilterEnableSpecifications)").click(filterEnableSpecifications);
            filterEnableSpecifications();

            $("#@Html.IdFor(model => model.FilterEnableAttributes)").click(filterEnableAttributes);
            filterEnableAttributes();

        });

        function filterEnableManufacturers() {
            if ($('#@Html.IdFor(model => model.FilterEnableManufacturers)').is(':checked')) {
                $('#ctEnableManufacturers').show();
            } else {
                $('#ctEnableManufacturers').hide();
            }
        }

		function filterEnableVendors() {
            if ($('#@Html.IdFor(model => model.FilterEnableVendors)').is(':checked')) {
                $('#ctEnableVendors').show();
            } else {
                $('#ctEnableVendors').hide();
            }
        }

		function filterEnableSpecifications() {
            if ($('#@Html.IdFor(model => model.FilterEnableSpecifications)').is(':checked')) {
                $('#ctEnableSpecifications').show();
            } else {
                $('#ctEnableSpecifications').hide();
            }
        }

		function filterEnableAttributes() {
            if ($('#@Html.IdFor(model => model.FilterEnableAttributes)').is(':checked')) {
                $('#ctEnableAttributes').show();
            } else {
                $('#ctEnableAttributes').hide();
            }
        }

</script>


